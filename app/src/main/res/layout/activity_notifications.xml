<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical">

    <!-- Title for Resumes Dealt/Received -->
    <TextView
        android:id="@+id/applications_sent_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:gravity="center"
        android:text="Applications Sent"
        android:textColor="@color/neutral50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ListView for resume results -->
    <ListView
        android:id="@+id/resume_result_willRead"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:padding="5dp" />

    <!-- Inside activity_notifications.xml -->
    <Button
        android:id="@+id/btnReadLocalJobAlerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/lightBlue"
        android:fontFamily="@font/sfpro"
        android:text="Read Local Job Alerts" />


    <!-- Return button -->
    <Button
        android:id="@+id/btnReturnToWorkerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/sfpro"
        android:text="Return" />

</LinearLayout>
