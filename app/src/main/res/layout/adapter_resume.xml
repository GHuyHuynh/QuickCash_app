<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/neutral50"
            android:orientation="vertical">


            <TextView
                android:id="@+id/adapter_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sfpro"
                android:text="Application"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adapter_resume_jobName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:paddingStart="10dp"
                android:text="Job Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_resume_jobSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:paddingStart="10dp"
                android:text="Job Salary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_resume_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:paddingStart="10dp"
                android:text="Resume Employee"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_resume_jobkey"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:fontFamily="@font/sfpro"
                android:text="Resume JObKey" />

            <TextView
                android:id="@+id/adapter_resume_key"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:fontFamily="@font/sfpro"
                android:text="Resume Key" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/resume_pass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkBlue"

                    android:fontFamily="@font/sfpro"
                    android:text="Accept"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/resume_refuse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:fontFamily="@font/sfpro"
                    android:text="Refuse"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>