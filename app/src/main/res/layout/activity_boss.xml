<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neutral50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_resumePostingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpro"
            android:padding="8dp"
            android:text="Applications"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Switch
            android:id="@+id/switch_preferredEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="@font/sfpro"
            android:gravity="right|end"
            android:padding="5dp"
            android:text="Preferred Employee Only"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_preferredEmployee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#005CE0E5"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:padding="5dp" />

    <ListView
        android:id="@+id/listView_workers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#005CE0E5"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:padding="5dp" />
