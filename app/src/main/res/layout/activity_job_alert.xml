<!-- activity_job_alert.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical">

    <!-- Title for Job Alerts -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sfpro"
        android:gravity="center"
        android:text="Local Job Alert"
        android:textColor="@color/neutral50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ListView for preferred jobs -->
    <ListView
        android:id="@+id/listView_preferredJobs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:padding="5dp" />

    <!-- Button to enable location tracking -->
    <Button
        android:id="@+id/btnEnableLocationTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/lightBlue"
        android:fontFamily="@font/sfpro"
        android:text="Enable Location Tracking for Customized Notifications" />

    <!-- Return button -->
    <Button
        android:id="@+id/btnReturnToWorkerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/sfpro"
        android:text="Return" />

</LinearLayout>
